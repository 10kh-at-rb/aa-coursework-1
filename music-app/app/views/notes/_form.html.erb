<form action="<%= track_notes_url(track) %>" method="POST">
  <input type="hidden"
           name="authenticity_token"
           value="<%= form_authenticity_token %>">

  <label for="note">Note:</label>
  <textarea name="note[note_body]" id="note"></textarea>
  <br>

  <button>Post Note!</button>
</form>
