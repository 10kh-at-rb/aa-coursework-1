<% @album.errors.full_messages.each do |error| %>
  <li><%= error %></li>
<% end %>

<form action="<%= album_url(@album) %>" method="POST">
  <input type="hidden"
           name="_method"
           value="PATCH">
  <input type="hidden"
           name="authenticity_token"
           value="<%= form_authenticity_token %>">

  <label for="name">Name:</label>
  <input type="text"
         name="album[name]"
         id="name"
         value="<%= @album.name %>">
  <br>

  <label for="album_type">Album Type:</label>
  Studio <input type="radio" name="album[album_type]" value="Studio"
  <% if @album.album_type == "Studio" %>
    checked
  <% end %>>
  Live <input type="radio" name="album[album_type]" value="Live"
  <% if @album.album_type == "Live" %>
    checked
  <% end %>>
  <br>

  <button>Edit Album!</button>
</form>
