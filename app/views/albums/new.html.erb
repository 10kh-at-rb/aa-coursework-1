<form action="<%= band_albums_url %>" method="POST">
  <input type="hidden"
           name="authenticity_token"
           value="<%= form_authenticity_token %>">

  <label for="name">Name:</label>
  <input type="text"
          name="album[name]"
          id="name"
          value="<%= @album.name %>">
  <br>

  <label for="album_type">Album Type:</label>
  Studio <input type="radio" name="album[album_type]" value="Studio">
  Live <input type="radio" name="album[album_type]" value="Live">
  <br>

  <button>Create Album!</button>
</form>
