<form action="<%= albums_url %>" method="POST">
  <input type="hidden"
           name="authenticity_token"
           value="<%= form_authenticity_token %>">

  <label for="name">Name:</label>
  <input type="text"
          name="album[name]"
          id="name"
          value="<%= @album.name %>">
  <br>

  <label for="album">Album:</label>
  <select id="album" name="album[album_id]">

  </select>

  <label for="album_type">Album Type:</label>
  <input type="radio" name="album[album_type]" value="Regular">
  <input type="radio" name="album[album_type]" value="Bonus">
  <br>

  <button>Create Album!</button>
</form>
