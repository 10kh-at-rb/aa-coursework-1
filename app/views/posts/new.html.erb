<h2> Create Post! </h2>

<%= flash[:errors] %>
<br>
<br>

<form action="<%= posts_url %>" method="POST">
    <input type="hidden"
          name="authenticity_token"
          value="<%= form_authenticity_token %>">

    <label for="title">Title:</label>
    <input type="text"
        name="post[title]"
        id="title"
        value=<%= @post.title %>>
    <br>
    <br>

    <label for="url">URL:</label>
    <input type="text" name="post[url]" id="url" value="<%= @post.url %>">
    <br>
    <br>

    <label for="sub_selection">Sub</label>
      <select name="post[sub_id]" id="sub_selection">
      <% Sub.all.each do |sub| %>

        <option value="<%= sub.id %>"<%= "selected" if sub.id == @post.sub_id %>>  <%= sub.title %> </option>
      <% end %>
    </select>

    <label for="content">Content:</label>
    <textarea name="post[body]" id="content"><%= @post.body %></textarea>
    <br>
    <br>

    <button>Create Post!</button>

</form>
